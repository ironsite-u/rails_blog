<div class="container mt-5">
  <h1 class="mb-4 text-center fw-bold">멋진 블로그 📝</h1>

  <%= link_to "✍️ 새 글 작성", new_post_path, class: "btn btn-success mb-4" %>

  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% @posts.each do |post| %>
      <div class="col">
        <div class="card shadow h-100 border-0" style="background: #fdf8ff;">
          <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
            <span class="badge bg-success">NEW</span>
            <small class="text-muted"><%= post.created_at.strftime("%Y.%m.%d %H:%M") %></small>
          </div>
          <div class="card-body">
            <h5 class="card-title text-primary fw-bold"><%= post.title %></h5>
            <p class="card-text text-secondary"><%= truncate(post.body, length: 100) %></p>
          </div>
          <div class="card-footer bg-white border-top-0 d-flex justify-content-end gap-2">
            <%= link_to post_path(post), class: "btn btn-outline-primary btn-sm" do %>
              <i class="fas fa-book-open me-1"></i> 자세히 보기
            <% end %>
            <%= link_to edit_post_path(post), class: "btn btn-outline-secondary btn-sm" do %>
              <i class="fas fa-pen me-1"></i> 수정
            <% end %>
            <%= link_to post, method: :delete, data: { confirm: "정말 삭제할까요?" }, class: "btn btn-outline-danger btn-sm" do %>
              <i class="fas fa-trash me-1"></i> 삭제
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
