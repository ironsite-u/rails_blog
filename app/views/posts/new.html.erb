<h2>새 글 작성</h2>

<%= form_with(model: @post, local: true) do |form| %>
  <div>
    <%= form.label :title, "제목" %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, "내용" %><br>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit "글 등록" %>
  </div>
<% end %>
